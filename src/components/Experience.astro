<script>
    // Get all tab buttons and tab content elements
    const tabButtons = document.querySelectorAll('[data-tab]');
    const tabContents = document.querySelectorAll('.tab-content');

    // Add click event listeners to each tab button
    tabButtons.forEach(tabButton => {
        tabButton.addEventListener('click', () => {
            const tabId = tabButton.getAttribute('data-tab');

            // Hide all tab content elements
            tabContents.forEach(tabContent => {
                tabContent.classList.add('hidden');
            });

            // Show the selected tab content
            document.getElementById(tabId).classList.remove('hidden');

            // Change the text color of the clicked tab button to purple
            tabButtons.forEach(button => {
                if (button === tabButton) {
                    button.style.color = 'purple';
                } else {
                    button.style.color = ''; // Reset color for other buttons
                }
            });
        });
    });

    // Function to toggle a specific tab
    function toggleTab(tabId) {
        // Hide all tab content elements
        tabContents.forEach(tabContent => {
            tabContent.classList.add('hidden');
        });

        // Show the selected tab content
        document.getElementById(tabId).classList.remove('hidden');

        // Change the text color of the corresponding tab button to purple
        tabButtons.forEach(button => {
            if (button.getAttribute('data-tab') === tabId) {
                button.style.color = 'purple';
            } else {
                button.style.color = ''; // Reset color for other buttons
            }
        });
    }

    // Show the default tab (CLAWS Lab) when the script runs
    toggleTab('tab1');
</script>